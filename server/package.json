{
  "name": "velach_bot",
  "version": "3.3.0",
  "description": "Telegram Bot for https://t.me/veloch chat",
  "author": "bnopne",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "pg-typed": "pgtyped -w -c pg-typed-config.json",
    "execute-ts": "ts-node -r tsconfig-paths/register",
    "create-tables": "npm run execute-ts ./src/cli.ts -- --create-tables",
    "drop-tables": "npm run execute-ts ./src/cli.ts -- --drop-tables",
    "seed-test-db": "npm run execute-ts ./src/cli.ts -- --seed-test-db",
    "backup-db": "npm run execute-ts ./src/cli.ts -- --backup-db",
    "create-migration": "npm run execute-ts ./src/cli.ts -- --create-migration",
    "apply-migrations": "npm run execute-ts ./src/cli.ts -- --apply-migrations",
    "build-binary:bot": "pkg --config pkg-bot.config.json dist/main.js",
    "build-binary:cli": "pkg --config pkg-cli.config.json dist/cli.js",
    "zip-binaries": "npm run execute-ts ./src/cli.ts -- --zip-binaries"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^10.4.3",
    "@nestjs/jwt": "^10.0.1",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^10.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "date-fns": "^2.28.0",
    "dotenv": "^16.0.2",
    "mustache": "^4.2.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.8",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^10.4.3",
    "@pgtyped/cli": "^0.13.0",
    "@pgtyped/query": "^0.13.0",
    "@telegraf/types": "^7.1.0",
    "@types/express": "^4.17.13",
    "@types/jest": "27.0.2",
    "@types/mustache": "^4.1.2",
    "@types/node": "^22.5.1",
    "@types/passport-jwt": "^3.0.8",
    "@types/pg": "^8.11.6",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@yao-pkg/pkg": "^5.12.1",
    "commander": "^8.3.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "moduleNameMapper": {
      "src/(.*)": "<rootDir>/$1"
    },
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "volta": {
    "node": "20.17.0"
  }
}
