{
  "name": "velach_bot",
  "version": "3.0.0",
  "description": "Telegram Bot for https://t.me/veloch chat",
  "author": "bnopne",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist dist-binary",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "pg-typed": "pgtyped -w -c pg-typed-config.json",
    "execute-ts": "ts-node -r tsconfig-paths/register",
    "create-tables": "npm run execute-ts ./src/cli.ts -- --create-tables",
    "seed-test-db": "npm run execute-ts ./src/cli.ts -- --seed-test-db",
    "backup-db": "npm run execute-ts ./src/cli.ts -- --backup-db",
    "download-latest-dump": "npm run execute-ts ./src/cli.ts -- --download-latest-dump",
    "clean-dropbox-dumps": "npm run execute-ts ./src/cli.ts -- --clean-dropbox-dumps",
    "create-migration": "npm run execute-ts ./src/cli.ts -- --create-migration",
    "apply-migrations": "npm run execute-ts ./src/cli.ts -- --apply-migrations",
    "build-binary:bot": "pkg --config pkg-bot.config.json dist/main.js",
    "build-binary:cli": "pkg --config pkg-cli.config.json dist/cli.js",
    "zip-binaries": "npm run execute-ts ./src/cli.ts -- --zip-binaries"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/jwt": "^10.0.1",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^8.4.7",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "date-fns": "^2.28.0",
    "dotenv": "^16.0.2",
    "dropbox": "^10.24.0",
    "mustache": "^4.2.0",
    "node-fetch": "^2.6.7",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "telegraf": "^4.6.0",
    "typegram": "^3.7.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.4.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@pgtyped/cli": "^0.13.0",
    "@pgtyped/query": "^0.13.0",
    "@types/express": "^4.17.13",
    "@types/jest": "27.0.2",
    "@types/mustache": "^4.1.2",
    "@types/node": "^16.0.0",
    "@types/node-fetch": "^2.6.1",
    "@types/passport-jwt": "^3.0.8",
    "@types/pg": "^8.6.4",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "commander": "^8.3.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "pkg": "^5.8.0",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "moduleNameMapper": {
      "src/(.*)": "<rootDir>/$1"
    },
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "volta": {
    "node": "14.18.1"
  }
}
