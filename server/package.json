{
  "name": "velach_bot_server",
  "version": "3.5.0",
  "description": "Telegram Bot for https://t.me/veloch chat",
  "author": "bnopne",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod:server": "node dist/main",
    "start:prod:cli": "node dist/cli",
    "lint": "eslint",
    "lint-fix": "eslint --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "pg-typed": "pgtyped -w -c pg-typed-config.json",
    "execute-ts": "ts-node -r tsconfig-paths/register",
    "create-tables": "npm run execute-ts ./src/cli.ts -- --create-tables",
    "drop-tables": "npm run execute-ts ./src/cli.ts -- --drop-tables",
    "seed-test-db": "npm run execute-ts ./src/cli.ts -- --seed-test-db",
    "backup-db": "npm run execute-ts ./src/cli.ts -- --backup-db",
    "create-migration": "npm run execute-ts ./src/cli.ts -- --create-migration",
    "apply-migrations": "npm run execute-ts ./src/cli.ts -- --apply-migrations",
    "copy-package-to-vm": "cpy dist package.json package-lock.json .vagrant_data"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/platform-express": "^8.4.7",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "mustache": "^4.2.0",
    "pg": "^8.13.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.8.1",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@nestjs/cli": "^8.2.8",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@pgtyped/cli": "^0.13.0",
    "@pgtyped/query": "^0.13.0",
    "@telegraf/types": "^7.1.0",
    "@types/express": "^4.17.13",
    "@types/jest": "27.0.2",
    "@types/mustache": "^4.2.5",
    "@types/node": "^22.13.4",
    "@types/passport-jwt": "^3.0.8",
    "@types/pg": "^8.11.11",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "commander": "^13.1.0",
    "cpy-cli": "^5.0.0",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^27.2.5",
    "prettier": "^3.5.1",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5",
    "typescript-eslint": "^8.24.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "moduleNameMapper": {
      "src/(.*)": "<rootDir>/$1"
    },
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "volta": {
    "node": "22.11.0"
  }
}
